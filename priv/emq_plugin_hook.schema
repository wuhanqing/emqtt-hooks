%%-*- mode: erlang -*-
%% emq_redis config mapping
{mapping, "redis.server", "emq_redis.server", [
  {default, {"127.0.0.1", 6379}},
  {datatype, [integer, ip, string]}
]}.

{mapping, "redis.pool", "emq_redis.server", [
  {default, 8},
  {datatype, integer}
]}.

{mapping, "redis.database", "emq_redis.server", [
  {default, 0},
  {datatype, integer}
]}.

{mapping, "redis.password", "emq_redis.server", [
  {default, ""},
  {datatype, string},
  hidden
]}.

{translation, "emq_redis.server", fun(Conf) ->
  {RHost, RPort} =
  case cuttlefish:conf_get("redis.server", Conf) of
    {Ip, Port} -> {Ip, Port};
    S          -> case string:tokens(S, ":") of
                    [Domain]       -> {Domain, 6379};
                    [Domain, Port] -> {Domain, list_to_integer(Port)}
                  end
    end,
  Pool = cuttlefish:conf_get("redis.pool", Conf),
  Passwd = cuttlefish:conf_get("redis.password", Conf),
  DB = cuttlefish:conf_get("redis.database", Conf),
  [{pool_size, Pool},
   {auto_reconnect, 1},
   {host, RHost},
   {port, RPort},
   {database, DB},
   {password, Passwd}]
end}.

